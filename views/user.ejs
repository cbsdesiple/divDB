<%- include("partials/header") %>

<div class="container">
  <h1><%= user[0].user_fname %><%=user[0].user_lname%></h1>
</div>

<div class="container">
  <h2>Items Checked Out</h2>
  <table class="table table-dark table-bordered">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Media Type</th>
        <th scope="col">Due Date</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < user.length; i++){ %>
        <tr>
          <th scope="row"><%=user[i].item_title%></th>
          <td>s<%=user[i].item_media_type%></td>
          <td><%=user[i].item_due_date.toLocaleDateString("en-US")%></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<div class="container">
  <form action="/users/<%=values%>" method="POST">
    <div class="form-group">
      <label for="search">Check Out Barcode</label>
      <input type="search" class="form-control" name="barcode">
    </div>
    <button type="submit" class="btn btn-light">Search</button>
  </form>
</div>



<%- include("partials/footer") %>
